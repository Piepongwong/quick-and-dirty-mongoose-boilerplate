<form action="/customer/update" method="POST">

    <input type="text" name="name" value="{{name}}">
    <input type="text" name="nationality" value="{{nationality}}">
    <input type="text" name="profession" value="{{profession}}">
    <input type="hidden" name="id" value="{{_id}}">

    <select multiple id="unvisited">
        {{#each unvisitedRestaurants}}
            <option selected value="{{_id}}">{{name}}</option>
        {{/each}}
    </select><select multiple name="visited" id="visited">
        {{#each visitedRestaurants}}
            <option value={{_id}}>{{name}}</option>
        {{/each}}
    </select>

    <button type="submit">Submit</button>
</form>


<script>
   let allOptions =  document.querySelectorAll("#unvisited option")
   let visited = document.getElementById("visited")
   for(let i =0 ; i < allOptions.length; i++) {
       allOptions[i].addEventListener("click", function(event) {
            visited.appendChild(event.currentTarget)
       })
   }
</script>

<style>
    input {
        display: block;
    }
    form {
        padding: 0;
    }
    select {
        box-sizing: border-box;
        width: 50%;
        height: 350px;
        display: inline-block;
        margin: 0;
        padding: 0;
    }
</style>